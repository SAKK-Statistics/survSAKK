Events = model$nevent,
HR = round(model$conf.int[,"exp(coef)"], digits = 2),
lwrCI = round(model$conf.int[,"lower .95"], digits = 2),
uprCI = round(model$conf.int[,"upper .95"], digits = 2),
Logrank = logrankpval)
